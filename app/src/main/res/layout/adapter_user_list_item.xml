<com.xuexiang.xui.widget.layout.XUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/XUILayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_20dp"
    android:layout_marginVertical="@dimen/dimen_10dp"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_20dp"
    android:paddingVertical="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="用户Id" />

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="登录名" />

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="密码" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_id"
            style="@style/TextStyle.Explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_login_name"
            style="@style/TextStyle.Explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            tools:text="xuexiang" />

        <TextView
            android:id="@+id/tv_password"
            style="@style/TextStyle.Explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            tools:text="1111111" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/dimens_10dp"
        android:background="@color/xui_config_color_separator_light_phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="start"
            android:text="姓名" />

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="性别" />

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start"
            android:text="年龄" />

        <TextView
            style="@style/TextStyle.Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="start"
            android:text="手机" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/TextStyle.Explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="start"
            tools:text="用户名" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/TextStyle.Explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start"
            tools:text="男" />

        <TextView
            android:id="@+id/tv_age"
            style="@style/TextStyle.Explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start"
            tools:text="23" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/TextStyle.Explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="start"
            tools:text="1221213123" />

    </LinearLayout>


</com.xuexiang.xui.widget.layout.XUILinearLayout>